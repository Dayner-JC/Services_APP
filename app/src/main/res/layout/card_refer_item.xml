<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="190dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="20dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image1"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/color_selected"
            android:layout_gravity="bottom"
            android:id="@+id/card_label"
            android:background="#e6ffffff"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:text=""
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sf_pro_semibold"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:id="@+id/etiqueta"
            android:background="@color/active_dot_color"
            android:layout_width="160dp"
            android:layout_height="22dp"
            android:layout_marginTop="20dp"
            android:text="@string/popular"
            android:includeFontPadding="false"
            android:layout_alignParentTop="true"
            android:rotation="45"
            android:fontFamily="@font/sf_pro_"
            android:paddingStart="48dp"
            android:layout_marginEnd="-58dp"
            android:layout_alignParentEnd="true"
            tools:ignore="RtlSymmetry,VisualLintBounds" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/active_dot_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/logo"
            android:layout_alignTop="@+id/card_label"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sf_pro_semibold"
            android:layout_marginStart="18dp"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
