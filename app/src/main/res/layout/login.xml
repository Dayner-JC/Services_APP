<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f8f9fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="textStart">

    <Button
        android:id="@+id/google"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/apple"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/sf_pro_"
        android:paddingStart="125dp"
        android:stateListAnimator="@null"
        android:text="@string/continue_with_google"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#1a1a3c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />

    <Button
        android:id="@+id/apple"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#efefef"
        android:fontFamily="@font/sf_pro_"
        android:includeFontPadding="false"
        android:paddingStart="123dp"
        android:stateListAnimator="@null"
        android:text="@string/continue_with_apple"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#1a1a3c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="50.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="RtlSymmetry,TextContrastCheck,VisualLintButtonSize" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logoContainer"
        android:background="@drawable/border_backgraund"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_login" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1a1a3c"
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/welcome"
        android:layout_below="@+id/logoContainer"
        android:layout_marginEnd="156dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="#1a1a3c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-35dp"
        android:text="@string/email_address"
        android:layout_above="@+id/email"
        android:fontFamily="@font/sf_pro_semibold"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:textColor="#1a1a3c"
        android:textColorHint="#801d1f3e"
        android:gravity="center_vertical"
        android:id="@+id/email"
        android:background="@drawable/edit_text_background"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:hint="@string/enter_your_email"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:drawableEnd="@drawable/email_icon"
        android:layout_below="@+id/welcomeText"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/cursor"
        android:fontFamily="@font/sf_pro_"
        android:paddingStart="26dp"
        android:paddingEnd="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:autofillHints="none"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/email_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/sf_pro_"
        android:includeFontPadding="false"
        android:text="@string/enter_a_email"
        android:textColor="#ff0101"
        android:textSize="12sp"
        tools:ignore="TextContrastCheck" />
    <TextView
        android:textSize="14sp"
        android:textColor="#1a1a3c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/password"
        android:layout_below="@+id/email"
        android:fontFamily="@font/sf_pro_semibold"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:textColor="#1a1a3c"
        android:textColorHint="#801d1f3e"
        android:gravity="center_vertical"
        android:id="@+id/password"
        android:background="@drawable/edit_text_background"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:hint="@string/enter_your_password"
        android:layout_below="@+id/email"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor"
        android:fontFamily="@font/sf_pro_"
        android:paddingStart="26dp"
        android:paddingEnd="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:autofillHints="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:passwordToggleEnabled="true"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/password_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/sf_pro_"
        android:includeFontPadding="false"
        android:text="@string/enter_a_password"
        android:textColor="#ff0101"
        android:textSize="12sp"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/togglePasswordVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_view"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <Button
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:id="@+id/loginButton"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="20dp"
        android:text="@string/login_in"
        android:layout_below="@+id/password"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro_semibold"
        android:stateListAnimator="@null"
        android:backgroundTint="#1d1f3e"
        android:layout_marginHorizontal="20dp"
        tools:ignore="VisualLintButtonSize" />
    <TextView
        android:textSize="14sp"
        android:textColor="#1a1a3c"
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/or_continue_with"
        android:layout_below="@+id/Guest"
        android:fontFamily="@font/sf_pro_"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/horizontalLine"
        android:background="#1a1a3c"
        android:layout_width="117dp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/apple"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/horizontalLine2"
        android:background="#1a1a3c"
        android:layout_width="117dp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/apple"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/Guest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#e7e7e7"
        android:fontFamily="@font/sf_pro_semibold"
        android:onClick="onGuestButtonClicked"
        android:stateListAnimator="@null"
        android:text="@string/guest"
        android:textAllCaps="false"
        android:textColor="#1a1a3c"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck,VisualLintButtonSize" />
    <TextView
        android:textColor="#1d1f3e"
        android:id="@+id/text_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/forget_password"
        android:layout_below="@+id/password"
        android:fontFamily="@font/sf_pro_"
        android:layout_marginEnd="17dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/apple"
        android:layout_alignTop="@+id/apple"
        android:layout_alignEnd="@+id/apple"
        android:layout_alignBottom="@+id/apple"
        android:layout_marginStart="83dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#00ffffff"
        app:srcCompat="@drawable/apple_icon"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/google"
        android:layout_alignTop="@+id/google"
        android:layout_alignEnd="@+id/google"
        android:layout_marginStart="85dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="231dp"
        android:backgroundTint="#001d1f3e"
        app:srcCompat="@drawable/google_icon"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
</RelativeLayout>
